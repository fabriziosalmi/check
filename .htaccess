# Set correct MIME type for WebAssembly files
<IfModule mod_mime.c>
  AddType application/wasm .wasm
</IfModule>

# Enable CORS
<IfModule mod_headers.c>
  <FilesMatch "\.(wasm|js)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Content-Type "application/wasm" env=WASM
  </FilesMatch>
</IfModule>

# Set environment variable for .wasm files
<FilesMatch "\.wasm$">
  SetEnv WASM 1
</FilesMatch>

# Ensure proper content type detection
<IfModule mod_headers.c>
  Header unset X-Content-Type-Options
</IfModule>
